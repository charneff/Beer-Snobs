<h1> All Beers </h1>


<% @beers.each do |beer| %>
<h2><a href="/beers/<%= beer.id %>"><%= beer.name %> - <%= beer.abv %>%, by <%= beer.brewery.name %></a></h2>
  
    <%= link_to "Write a review", new_beer_review_path(beer.id) %>
    <%= link_to "See all Reviews", beer_reviews_path(beer.id) %>
    <%= link_to "Add a New Beer", new_beer_path %>
  <div>
    <p><%= beer.flavor_profile %></p>
  </div>
<% end %>
